{
	"name": "react-ts-graphql-boilerplate",
	"version": "0.0.1",
	"description": "Awesome project developed with TypeORM.",
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/faker": "^5.1.5",
		"@types/node": "^14.14.8",
		"start-server-and-test": "^1.11.6",
		"supertest": "^6.0.1",
		"ts-node": "9.0.0",
		"typescript": "4.0.5"
	},
	"dependencies": {
		"@types/bcrypt": "^3.0.0",
		"@types/jest": "^26.0.19",
		"@types/uuid": "^8.3.0",
		"bcryptjs": "^2.4.3",
		"dotenv": "^8.2.0",
		"faker": "^5.1.0",
		"gql2ts": "^1.10.1",
		"graphql-import": "^1.0.2",
		"graphql-request": "^3.4.0",
		"graphql-yoga": "^1.18.3",
		"jest": "^26.6.3",
		"nodemon": "^2.0.6",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"ts-jest": "^26.4.4",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typeorm": "0.2.29",
		"uuid": "^8.3.1"
	},
	"scripts": {
		"start": "SET NODE_ENV=development & ts-node --files src/index.ts",
		"dev": "SET NODE_ENV=development & nodemon --exec ts-node --files src/index.ts",
		"test": "SET NODE_ENV=test & jest --detectOpenHandles",
		"test-server": "SET NODE_ENV=test & ts-node --files src/index.ts",
		"gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts",
		"ci": "start-server-and-test test-server http://localhost:4000 test"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
