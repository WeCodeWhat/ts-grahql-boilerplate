		"yup": "^0.32.8"
	},
	"scripts": {
		"start": "SET NODE_ENV=development & ts-node --files src/index.ts",
		"dev": "SET NODE_ENV=development & nodemon --exec ts-node --files src/index.ts --trace-warnings",
		"test": "SET NODE_ENV=test & jest --detectOpenHandles --watchAll",
		"pm2": "SET NODE_ENV=production & pm2 start src/index.ts --watch",
		"gen-schema-types": "ts-node --files src/scripts/createTypes.ts "
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
